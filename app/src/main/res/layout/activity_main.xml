<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese un nÃºmero"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnConvertToBinary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir a Binario"/>

    <Button
        android:id="@+id/btnConvertToDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir a Decimal"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumar Binarios"/>

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restar Binarios"/>

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:padding="8dp"/>

</LinearLayout>
